.container {
    color: #444;
    padding-top: 20rpx;
    /* padding-left: 60rpx;
    padding-right: 60rpx; */
}
.title {
    color: #444;
    text-align: center;
    font-size: 70rpx;
    /* margin: 20rpx; */

}

.order_title, .user_title{
    /* border: solid 1px green; 
